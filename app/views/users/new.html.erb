<h2>Sign up before all the cookies are gone:</h2>
<%= form_for(@user) do |f| %>
    <%= f.label :name %>
<br><%= f.text_field :name %>
<br><%= f.label :email %>
<br><%= f.text_field :email %>
<br><%= f.label :password %>
<br><%= f.text_field :password %>
<br><%= f.label :password_confirmation %>
<br><%= f.text_field :password_confirmation %>
<br><%= f.submit 'Create account!'%>
<%end%>
